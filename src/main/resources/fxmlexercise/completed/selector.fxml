<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
      <HBox alignment="CENTER" spacing="15.0">
            <TextField fx:id="topTextField" minHeight="25.0" minWidth="150.0" promptText="Color Name">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
            <ColorPicker fx:id="topColorPicker" minHeight="25.0" minWidth="125.0">
               <HBox.margin>
                  <Insets bottom="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </ColorPicker>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
            <TextField fx:id="bottomTextField" minHeight="25.0" minWidth="150.0" promptText="Color Name">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
            <ColorPicker fx:id="bottomColorPicker" minHeight="25.0" minWidth="125.0">
               <HBox.margin>
                  <Insets bottom="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </ColorPicker>
      </HBox>
      <Button fx:id="printButton" minWidth="80.0" mnemonicParsing="false" onAction="#printButtonAction" text="Print">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Button>
</fx:root>
